<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<include layout="@layout/common_header" />

	<ScrollView android:layout_width="fill_parent"
		android:gravity="bottom" android:layout_alignParentBottom="true"
		android:layout_height="fill_parent">

		<LinearLayout android:orientation="vertical"
			android:layout_alignParentBottom="true" android:gravity="center_horizontal"
			android:layout_width="fill_parent" android:layout_height="fill_parent">

			<TextView android:id="@+id/dateCaptured"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:text="" android:textColor="@color/black" android:background="@color/white"
				android:textSize="15px" android:paddingLeft="3px" />

			<TextView android:id="@+id/locationLabel"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:text="Geo Location: fetching ..." android:textColor="@color/black"
				android:background="@color/white" android:textSize="15px"
				android:paddingLeft="3px" />

			<ImageView android:id="@+id/thumbnail" android:gravity="center_horizontal"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:padding="10px" />

			<LinearLayout android:id="@+id/dummy" android:focusable="true"
				android:focusableInTouchMode="true" android:layout_width="0px"
				android:layout_height="0px" />

			<TextView android:id="@+id/titleLabel" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Title: "
				android:textColor="@color/black" android:background="@color/white"
				android:textSize="15px" android:paddingLeft="3px" />

			<EditText android:id="@+id/submitTitle" android:text=""
				android:layout_width="fill_parent" android:layout_height="wrap_content" />

			<TextView android:id="@+id/descriptionLabel"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:text="Description: " android:textColor="@color/black"
				android:background="@color/white" android:textSize="15px"
				android:paddingLeft="3px" />

			<EditText android:id="@+id/submitDescription" android:text=""
				android:layout_width="fill_parent" android:layout_height="wrap_content" />

			<TextView android:id="@+id/tagsLabel" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Tags: (optional - separated by comma)"
				android:textColor="@color/black" android:background="@color/white"
				android:textSize="15px" android:paddingLeft="3px" />

			<EditText android:id="@+id/submitTags" android:text=""
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginBottom="5px" />
				
			<View android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:layout_weight="1" />
				
			<LinearLayout android:orientation="horizontal"
				android:gravity="center_horizontal" android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<Button android:id="@+id/submitButton" android:layout_weight="1"
					android:layout_width="200px" android:layout_height="wrap_content"
					android:text="Submit" />

				<Button android:id="@+id/cancelButton" android:layout_weight="1"
					android:layout_width="200px" android:layout_height="wrap_content"
					android:text="Cancel" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>


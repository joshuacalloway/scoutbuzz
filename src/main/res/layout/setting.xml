<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center_horizontal">

	<TextView android:layout_width="fill_parent"
		android:textColor="@color/white" android:background="@color/dark_blue"
		android:layout_height="wrap_content" android:text="YouTube Direct"
		android:gravity="center_horizontal" android:padding="10px"
		android:textSize="25px" />

	<View android:layout_width="fill_parent" android:layout_height="2px"
		android:background="@color/black" />

	<TextView android:id="@+id/introMsg" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textColor="@color/black"
		android:background="@color/light_gray" android:text=""
		android:padding="10px" android:textSize="16px" />

	<View android:layout_width="fill_parent" android:layout_height="2px"
		android:background="@color/black" />
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:fillViewport="true">
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textColor="@color/black"
				android:text="News Source: " android:padding="10px"
				android:textSize="16px" />

			<Spinner android:id="@+id/domainSource" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:drawSelectorOnTop="true"
				android:prompt="@string/domain_prompt" android:textSize="15px" />

			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textColor="@color/black"
				android:text="Google / YouTube Account:" android:padding="10px"
				android:textSize="16px" />

			<Spinner android:id="@+id/ytAccount" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:drawSelectorOnTop="true"
				android:prompt="@string/yt_account_prompt" />

			<View android:layout_weight="1" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />

			<LinearLayout android:orientation="horizontal"
				android:gravity="center" android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<Button android:id="@+id/settingDoneButton"
					android:layout_width="100px" android:layout_height="wrap_content"
					android:text="Done" />
			</LinearLayout>


			<View android:layout_weight="1" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
			<View android:layout_weight="1" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
			<View android:layout_weight="1" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>
